gris_claro=#E6E6E6
azul_oscuro=#2A579A
celeste=#00C1F5
amarillo=#E6DB0D

@font-face {
    font-family: 'iconos';
    src:    url('fonts/icomoon.eot?1ajisv');
    src:    url('fonts/icomoon.eot?1ajisv#iefix') format('embedded-opentype'),
        url('fonts/icomoon.ttf?1ajisv') format('truetype'),
        url('fonts/icomoon.woff?1ajisv') format('woff'),
        url('fonts/icomoon.svg?1ajisv#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}

body
	background black
a
	color celeste	
.contenedor
	
	padding 0
	border solid gris_claro
	background gris_claro
	border-radius 15px
	margin 15px
	
	
	header
		position relative
		margin 0
		background azul_oscuro
		overflow hidden
		color white
		border-radius 15px 15px 0 0px
		padding 0 0 15px 0
		
		.logo
			float left
			border-right 3px solid celeste
			padding-right 20px
			img
				width 100px
		.foto
			position absolute
			top 6px
			right 0
			z-index 2
			img
				width 100px
				border-radius 50%;
		.flecha
			background celeste
			position absolute
			padding 7px 20px 7px 20px
			top 55px
			right 10px
			z-index 1

		.titulo
			margin 0px 200px 0px 200px
			font-family: 'Architects Daughter', cursive;
			.curso
				font-size 22px
				color amarillo
				text-decoration none
				font-family Arial
				font-style italic
				font-weight bold
				&:hover
					font-size 24px
					
			.publicar
				background celeste
				padding 5px 20px 5px 50px
				color white
				font-size 22px
				text-decoration none
				border-radius 10px
				display block
				float right
				font-family Arial
				text-shadow 2px 2px 0 black
				position relative
				&:hover
					box-shadow 0px 0px 15px white
				&:before
					font-family iconos
					content "\e900"
					color amarillo
					font-size 50px
					position absolute
					left 0
					bottom 2px
					
	nav
		background celeste
		border-left 15px solid white
		border-right 15px solid white
		position relative
		&:after
			border-left 20px solid white
			border-top 23px solid transparent
			border-bottom 23px solid transparent
			content ""
			position absolute
			top 0
		&:before
			border-right 20px solid white
			border-top 23px solid transparent
			border-bottom 23px solid transparent
			content ""
			position absolute
			top 0
			right 0	
			
		.menu
			margin 0
			padding 0
			text-align center
			li
				display inline-block
				padding 10px
				
				&:hover
					background azul_oscuro
				.item
					color white
					text-decoration none
					font-size 22px
					text-shadow 2px 2px 0 black
	section
		article
			margin 10px
			border-radius 0 0 15px 15px
			padding 5px
			box-shadow 2px 2px 15px black
			background white
			
			.cuerpo
				overflow hidden
				border-bottom 5px solid celeste
				position relative
				figure
					margin 0
					float left
					padding-right 10px
					img
						width 200px
				.subcuerpo
					h2
						margin 0
						padding 5px
					p
						margin 0
					.boton
						position absolute
						bottom 7px
						background azul_oscuro
						padding 7px 25px 7px 25px
						color white
						text-decoration none
						border-radius 10px
					.tiempo
						position absolute
						bottom 7px
						right 0
			.detalle
				overflow hidden
				padding 5px
				.manos
					float left
				.estrella
					float right
							
	
	footer
		background azul_oscuro
		padding 5px
		border-radius 15px
		text-align center
		color white
		p
			font-size 22px
			padding 5px
			margin 0
			
		a
			text-decoration none
			font-size 18px
			color white
			&:before
				content " - "
			&:after
				content " - "